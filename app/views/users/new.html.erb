<otr-header title="Sell Your Soul" radius="600" ></otr-header>

<div class="otr-signup otr-slate-w" ng-app="publicapp" ng-controller="SignUpController">
	
	<h4>Become one of us...</h4>

	<form name="signUpForm" ng-submit="signUp(newuser)">


		<div class="new-input-group">
			<input-field id="signup-name" text="full name" field="newuser.user.name"></input-field>
			<input-field id="signup-email" text="email" field="newuser.user.email"></input-field>
			<input-field id="signup-username" text="username" field="newuser.user.username"></input-field>
			<input-field id="signup-password" text="password" type="password" field="newuser.user.password"></input-field>
			<input-field id="signup-password-conf" text="confirm-password" type="password" field="newuser.user.password_confirmation"></input-field>
		</div>
		
		<ul class="otr-validation-errors">
			<li ng-repeat="err in errors">{{err}}</li>
		</ul>

		<h1><input type="submit" class="otr-btn-primary lg" value="Join Us!"></h1>

	</form>

	<%= link_to "Cancel", root_path, class: "otr-btn-secondary md" %>

</div>
