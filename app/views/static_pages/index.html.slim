
div class="otr-home-banner"

	div class="otr-home-logo"
			span class="logo-off"
				| Off
			br
			span class="logo-the"
				| the
			br
			span class="logo-record"
				| &nbsp;&nbsp;record.</span>


div class="otr-home-banner-mock"

section ng-app="publicapp" ng-controller="SignInController"

	div class="otr-slate-container container"
		
		form name="signUpForm" ng-submit="signIn(signin)"

			div class="new-input-group"
				input-field elemid="signin-username" text="email / username" field="signin.email" classes="bold"
				input-field elemid="signin-password" text="password" type="password" field="signin.password" classes="bold"

			ul class="otr-validation-errors"
			 	li ng-repeat="err in errors" {{err}}

		 	br

			div class="row"
				div class="col-xs-5"
					button type="submit" class="otr-btn-primary lg"
						| Log In

				div class="col-xs-7 text-right"
					p
						| Or, join the fun

					button class="otr-btn-secondary md" type="button" ng-click="signUp()"
						i class="fa hand-o-right"
							| &nbsp;&nbsp;Sign Up



