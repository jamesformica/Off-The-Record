

<div class="otr-home container" ng-app="publicapp" ng-controller="SignInController">

	<div class="row home-row">

		

		<div class="outline col-md-6">

			<div class="slate-floating">

				<form name="signUpForm" ng-submit="signIn(signin)">

					<div class="new-input-group">
						<input-field elemid="signin-username" text="email / username" field="signin.email" classes="bold"></input-field>
						<input-field elemid="signin-password" text="password" type="password" field="signin.password" classes="bold"></input-field>
					</div>

					<ul class="otr-validation-errors">
						<li ng-repeat="err in errors">{{err}}</li>
					</ul>

					<br/>

					<div class="row">
						<div class="col-xs-5">
							<button type="submit" class="otr-btn-primary lg">
								Log In
							</button>
						</div>

						<div class="col-xs-7 text-right">
							<p>Or, join the fun</p>

							<button class="otr-btn-secondary md" type="button" ng-click="signUp()">
								<i class="fa hand-o-right"></i>&nbsp;&nbsp;Sign Up
							</button>
						</div>
					</div>

				</form>

			</div>
		</div>

		<div class="otr-home-logo col-md-6">

			<span class="logo-off">Off</span>
			<br/>
			<span class="logo-the">the</span>
			<br/>
			<span class="logo-record">Record</span>

		</div>

	</div>


</div>
<script>
	$(document).ready(function() {
		$(".logo-record").arctext({radius: 300, dir: -1});
	});
</script>