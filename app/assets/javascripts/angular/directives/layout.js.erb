angular.module("layout.directive", [])

.directive('actionMenuItem', function() {
	return {

		restrict: 'E',
		replace: 'true',
		scope: {
			icon: '@',
			text: '@',
			action: '&'
		},
		templateUrl: '<%= asset_path("action_menu_item.html") %>'
	}
})

.directive('friendship', function() {
	return {
		restrict: 'E',
		replace: 'true',
		scope: {
			friend: '=',
			destroy: '&'
		},
		templateUrl: '<%= asset_path("friendship.html") %>'
	}
})

.directive('friendshipRequest', function() {
	return {
		restrict: 'E',
		replace: 'true',
		scope: {
			request: '=',
			accept: '&',
			decline: '&'
		},
		templateUrl: '<%= asset_path("friendship_request.html") %>'
	}
})

;